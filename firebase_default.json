{
  "storage": {
    "rules": "etc/storage.rules.json"
  },
  "firestore": {
    "rules": "etc/firestore.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
