{
  "storage": {
    "rules": "etc/storage.rules"
  },
  "firestore": {
    "rules": "etc/firestore.rules"
  },
  "functions": {
    "source": "packages/backend/restapi/dist"
  },
  "hosting": {
    "public": "packages/frontend/dist",
    "ignore": ["firebase*.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
