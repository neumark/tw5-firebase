{
  "storage": {
    "rules": "etc/storage.rules.json"
  },
  "firestore": {
    "rules": "etc/firestore.rules.json"
  },
  "hosting": [
    {
      "site": "pn-wiki",
      "public": "public",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "tw/**",
        "scripts/**",
        "static/**",
        "**/node_modules/**",
        "etc/**"
      ]
    }
  ]
}
